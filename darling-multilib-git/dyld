#!/usr/bin/sh

if [[ -z "$@" ]] || [[ $(file $@) == *x86_64* ]]; then
	echo -e "\t\t\033[1;44;37mDarling 64-bit\033[0m"
	export LD_LIBRARY_PATH=/usr/share/GNUstep/lib
	/usr/share/PKGNAME/dyld64 $@
elif [[ $(file $@) == *i386* ]]; then
	echo -e "\t\t\033[1;44;37mDarling 32-bit\033[0m"
	export LD_LIBRARY_PATH=/usr/share/GNUstep32/lib32
	/usr/share/PKGNAME/dyld32 $@
else
	echo -e "\t\t\033[1;44;37mDarling 64-bit\033[0m"
	export LD_LIBRARY_PATH=/usr/share/GNUstep/lib
	/usr/share/PKGNAME/dyld64 $@
fi