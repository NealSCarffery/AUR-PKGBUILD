# Maintainer: X0rg

pkgname=php-gtk-git
_gitname=gtk-src
pkgver=2307.e972b25
pkgrel=5
pkgdesc="PHP bindings for the Gtk+ 2 library"
arch=('any')
url="http://gtk.php.net/"
license=('LGPL2.1')
depends=('php>=5.1.2' 'gtk2>=2.6' 'gtksourceview2' 'gtk2+extra' 'gtkhtml' 'libsexy' 'xulrunner' 'gtkspell3' 'php-pecl-cairo-svn')
makedepends=('git' 'make')
provides=('php-gtk')
conflicts=('php-gtk')
backup=(etc/php/php-gtk.ini)
install=php-gtk.install
source=("git://git.php.net/php/$_gitname.git"
	'php-gtk.ini')
md5sums=('SKIP'
         'ee998d65f0e002f8978e6ba2197aa8b0')

pkgver() {
  cd $_gitname
  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

build() {
  cd $_gitname
  if [[ $(locale -a | grep french) == "french" ]];then msg2 "Exécute 'buildconf'..."
  else
    msg2 "Run 'buildconf'..."
  fi
  ./buildconf --with-phpize=/usr/bin/phpize

  if [[ $(locale -a | grep french) == "french" ]];then msg2 "Exécute 'configure'..."
  else
    msg2 "Run 'configure'..."
  fi
  ./configure --with-php-config=/usr/bin/php-config --enable-php-gtk \
		--with-extra --with-html --with-libsexy --with-mozembed \
		--with-sourceview --with-spell --prefix=/usr
  if [[ $(locale -a | grep french) == "french" ]];then msg2 "Exécute 'make'..."
  else
    msg2 "Run 'make'..."
  fi
  make -j1
}

# check() {
#   cd $_gitname
#   make test
# }

package() {
  cd $_gitname
  make INSTALL_ROOT=$pkgdir install

  if [[ $(locale -a | grep french) == "french" ]];then msg2 "Installe le fichier '/etc/php/php-gtk.ini'..."
  else
    msg2 "Install '/etc/php/php-gtk.ini' file..."
  fi
  install -D -m644 "$srcdir/php-gtk.ini" "$pkgdir/etc/php/php-gtk.ini"
}
