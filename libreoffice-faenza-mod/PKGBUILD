pkgname=libreoffice-faenza-mod
pkgver=0.4.1
pkgrel=3
pkgdesc="An icons pack for LibreOffice, inspired by Faenza icons"
arch=('any')
url="http://gnome-look.org/content/show.php/Faenza+Icons++for+LibreOffice++4.0.0?content=157970"
license=('GPL')
depends=('libreoffice')
conflicts=('libreoffice-flat-icon-set')
install=$pkgname.install
source=("images_faenza_$pkgver.zip::https://github.com/X0rg/AUR-PKGBUILD/blob/master/libreoffice-faenza-mod/images_faenza_0.4.1.zip?raw=true")
md5sums=('8eaec4813175aac28e0bdc323a412f35')

package() {
	install -Dm0644 "$srcdir/LibreOffice Pack Icons-$pkgver/LibreOffice"*"/Faenza LibreOffice"*"/images_crystal.zip" \
		"$pkgdir/usr/lib/libreoffice/share/config/images_faenza.zip"
}
