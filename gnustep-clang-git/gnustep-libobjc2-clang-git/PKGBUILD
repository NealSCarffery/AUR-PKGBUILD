# Maintainer: X0rg

pkgname=gnustep-libobjc2-clang-git
_gitname=gnustep-libobjc2
pkgver=734.b18be6c
pkgrel=1
pkgdesc="The GNUstep Objective-C runtime is designed as a drop-in replacement for the GCC runtime, using Clang"
arch=('any')
url="http://www.gnustep.org/"
license=('MIT')
groups=('gnustep-clang-git')
makedepends=('git' 'clang' 'make' 'gnustep-make-clang-git')
conflicts=('gnustep-libobjc2-git')
source=('git://github.com/gnustep/gnustep-libobjc2.git')
md5sums=('SKIP')

pkgver() {
  cd $_gitname
  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

prepare() {
  cd $_gitname
  if [[ $(locale -a | grep french) == "french" ]];then msg2 "Créé le dossier 'build'."
  else
    msg2 "Create 'build' directory."
  fi

  mkdir build

  if [[ $(locale -a | grep french) == "french" ]];then warning "Si la bibliothèque '/usr/lib/libobjc.so' de gcc-libs existe déjà, le paquet ne sera pas installé !"
  else
    warning "If gcc-libs library '/usr/lib/libobjc.so' already exists, package wouldn't be installed !"
  fi
}

build() {
  cd $_gitname/build

  if [[ $(locale -a | grep french) == "french" ]];then msg2 "Exécute 'cmake'..."
  else
    msg2 "Run 'cmake'..."
  fi
  OBJCFLAGS=-fblocks CC=clang CXX=clang++ cmake .. -DCMAKE_INSTALL_PREFIX:PATH=/usr

  if [[ $(locale -a | grep french) == "french" ]];then msg2 "Exécute 'make'..."
  else
    msg2 "Run 'make'..."
  fi
  make
}

# To use check() function, you can uncomment it, but check will be negative.
# check() {
#   cd $_gitname/build
#   make test
# }

package() {
  cd $_gitname/build
  make DESTDIR="$pkgdir" install
}
